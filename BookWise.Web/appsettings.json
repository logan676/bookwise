{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "IncludeScopes": true,          
      "FormatterName": "json",        
      "FormatterOptions": {
        "SingleLine": true,           
        "IndentJson": false,
        "UseUtcTimestamp": true      
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=Data/bookwise.db"
  },
  "AllowedHosts": "*"
}
