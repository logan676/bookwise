<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookWise</title>
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" />
    <script>
        (function () {
            try {
                var stored = localStorage.getItem('bookwise.theme');
                var available = ['light', 'dark', 'system', 'forest', 'ocean', 'sunset', 'rose', 'lavender'];
                var preference = available.indexOf(stored) !== -1 ? stored : 'system';
                var prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
                var resolved;

                if (preference === 'system') {
                    resolved = prefersDark ? 'dark' : 'light';
                } else if (preference === 'dark' || preference === 'light') {
                    resolved = preference;
                } else {
                    resolved = preference;
                }

                document.documentElement.dataset.theme = resolved;
                document.documentElement.dataset.themePreference = preference;
            } catch (error) {
                // ignore errors (e.g., private mode)
            }
        })();
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true" defer></script>
</head>
<body>
    @{
        var mainClass = "main-content";
        if (ViewData.TryGetValue("MainClass", out var mainClassExtraObj) && mainClassExtraObj is string mainClassExtra && !string.IsNullOrWhiteSpace(mainClassExtra))
        {
            mainClass += $" {mainClassExtra}";
        }
    }
    <div class="app-shell">
        <header class="top-nav">
            <div class="nav-left">
                <a class="brand" asp-area="" asp-page="/Index">
                    <span class="sr-only">BookWise</span>
                    <span class="brand-icon" aria-hidden="true">
                        <img src="~/img/bookwise-icon.svg" width="36" height="36" alt="" />
                    </span>
                    <span class="brand-name" aria-hidden="true">BookWise</span>
                </a>
                <nav class="nav-links" aria-label="Primary">
                    <a class="nav-link" asp-page="/Index">My Books</a>
                    <a class="nav-link" asp-page="/Explore">Explore</a>
                    <a class="nav-link" asp-page="/Statistics">Statistics</a>
                </nav>
            </div>
            <div class="nav-right">
                <details class="settings-menu">
                    <summary class="settings-toggle" aria-haspopup="true" aria-label="Open user menu">
                        <span class="sr-only">Open user menu</span>
                        <span class="settings-avatar" aria-hidden="true">
                            <img src="~/img/bookwise-icon.svg" alt="" />
                        </span>
                        <span class="settings-chevron" aria-hidden="true">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
                                <path d="M6 9l6 6 6-6" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </span>
                    </summary>
                    <div class="settings-menu-panel" role="menu">
                        <a class="settings-menu-item" asp-page="/Settings" role="menuitem">Settings</a>
                        <button type="button" class="settings-menu-item" role="menuitem" data-menu-role="signout">Sign out</button>
                    </div>
                </details>
            </div>

        </header>
        <main class="@mainClass" role="main">
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
