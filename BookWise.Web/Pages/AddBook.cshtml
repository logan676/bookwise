@page
@model AddBookModel
@{
    ViewData["Title"] = "Add Book";
}

<div class="page-header">
    <div class="header-content">
        <div class="header-left">
            <a href="/" class="back-button">
                <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="m15 18-6-6 6-6"/>
                </svg>
                Back to My Books
            </a>
            <h1 class="page-title">Add New Book</h1>
        </div>
    </div>
</div>

<main class="add-book-content">
    <div class="add-book-container">
        <div class="search-section">
            <h2>Search for a Book</h2>
            <p class="section-description">Search our database to quickly add a book with pre-filled information.</p>
            
            <div class="search-bar-large">
                <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"/>
                    <path d="m21 21-4.35-4.35"/>
                </svg>
                <input type="search" placeholder="Search by title, author, or ISBN..." class="search-input-large" />
                <button type="button" class="search-button">Search</button>
            </div>
            
            <div class="search-results" id="search-results" hidden>
                <!-- Search results will be populated here -->
            </div>
        </div>

        <div class="divider">
            <span>OR</span>
        </div>

        <div class="manual-section">
            <h2>Add Manually</h2>
            <p class="section-description">Can't find what you're looking for? Add the book details manually.</p>
            
            <form class="add-book-form" method="post">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="Title">Title*</label>
                        <input type="text" id="Title" name="Title" required maxlength="200" />
                    </div>
                    
                    <div class="form-group">
                        <label for="Author">Author*</label>
                        <input type="text" id="Author" name="Author" required maxlength="200" />
                    </div>
                    
                    <div class="form-group">
                        <label for="ISBN">ISBN</label>
                        <input type="text" id="ISBN" name="ISBN" maxlength="20" placeholder="978-0-123456-78-9" />
                    </div>
                    
                    <div class="form-group">
                        <label for="Category">Category</label>
                        <input type="text" id="Category" name="Category" maxlength="100" placeholder="Fiction, Mystery, etc." />
                    </div>
                    
                    <div class="form-group full-width">
                        <label for="Description">Description</label>
                        <textarea id="Description" name="Description" rows="4" maxlength="2000" placeholder="Brief description of the book..."></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="CoverImageUrl">Cover Image URL</label>
                        <input type="url" id="CoverImageUrl" name="CoverImageUrl" maxlength="500" placeholder="https://example.com/image.jpg" />
                    </div>
                    
                    <div class="form-group">
                        <label for="Rating">Your Rating</label>
                        <select id="Rating" name="Rating">
                            <option value="">Select rating</option>
                            <option value="1">1 Star</option>
                            <option value="2">2 Stars</option>
                            <option value="3">3 Stars</option>
                            <option value="4">4 Stars</option>
                            <option value="5">5 Stars</option>
                        </select>
                    </div>
                    
                    <div class="form-group full-width">
                        <label for="Status">Reading Status</label>
                        <div class="radio-group">
                            <label class="radio-option">
                                <input type="radio" name="Status" value="plan-to-read" checked />
                                <span>Plan to Read</span>
                            </label>
                            <label class="radio-option">
                                <input type="radio" name="Status" value="reading" />
                                <span>Currently Reading</span>
                            </label>
                            <label class="radio-option">
                                <input type="radio" name="Status" value="read" />
                                <span>Already Read</span>
                            </label>
                        </div>
                    </div>
                    
                    <div class="form-group full-width">
                        <label class="checkbox-option">
                            <input type="checkbox" name="IsFavorite" />
                            <span>Mark as favorite</span>
                        </label>
                    </div>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="primary-button">Add Book</button>
                    <a href="/" class="secondary-button">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</main>