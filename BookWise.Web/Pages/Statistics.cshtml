@page
@model BookWise.Web.Pages.StatisticsModel
@{
    ViewData["Title"] = "Book Statistics";
    var displayName = User?.Identity?.IsAuthenticated == true && !string.IsNullOrWhiteSpace(User?.Identity?.Name)
        ? User!.Identity!.Name!
        : "Guest Reader";
    var emailAddress = User?.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
}

